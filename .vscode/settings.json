{
  // ===============================================
  // GITHUB COPILOT - MAXIMUM POWER CONFIGURATION
  // ===============================================

  // Core Copilot Settings
  "github.copilot.enable": {
    "*": true,
    "plaintext": true,
    "markdown": true,
    "scminput": true,
    "yaml": true
  },

  // Inline Suggestions
  "github.copilot.editor.enableAutoCompletions": true,
  "editor.inlineSuggest.enabled": true,
  "editor.inlineSuggest.suppressSuggestions": false,

  // Copilot Chat Features
  "github.copilot.chat.enabled": true,
  "github.copilot.chat.welcomeMessage": "firstUse",
  "github.copilot.chat.localeOverride": "auto",
  "github.copilot.chat.useProjectTemplates": true,
  "github.copilot.chat.terminalChatLocation": "terminal",

  // Enhanced Editor Integration
  "github.copilot.renameSuggestions.triggerAutomatically": true,
  "github.copilot.chat.search.semanticTextResults": true,
  "github.copilot.chat.search.codeSearch": true,

  // Terminal Integration (Copilot in Terminal)
  "terminal.integrated.suggest.enabled": true,
  "terminal.integrated.suggest.quickSuggestions": true,
  "github.copilot.advanced": {
    "debug.useNodeFetcher": false,
    "debug.useElectronFetcher": true,
    "debug.overrideEngine": "",
    "debug.testOverrideProxyUrl": "",
    "debug.overrideProxyUrl": "",
    "inlineSuggestCount": 3,
    "length": -1,
    "listCount": 10,
    "top_p": 1,
    "temperature": ""
  },

  // ===============================================
  // EDITOR ENHANCEMENTS FOR AI WORKFLOW
  // ===============================================

  // Better code context
  "editor.suggest.preview": true,
  "editor.suggest.showStatusBar": true,
  "editor.quickSuggestions": {
    "other": "on",
    "comments": "on",
    "strings": "on"
  },
  "editor.acceptSuggestionOnCommitCharacter": true,
  "editor.acceptSuggestionOnEnter": "on",
  "editor.suggestSelection": "first",
  "editor.wordBasedSuggestions": "matchingDocuments",
  "editor.wordBasedSuggestionsMode": "matchingDocuments",

  // Minimap & Breadcrumbs for better navigation
  "editor.minimap.enabled": true,
  "breadcrumbs.enabled": true,

  // File Explorer
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,

  // ===============================================
  // PROJECT-SPECIFIC SETTINGS
  // ===============================================

  // JavaScript/TypeScript
  "javascript.suggest.autoImports": true,
  "typescript.suggest.autoImports": true,
  "javascript.updateImportsOnFileMove.enabled": "always",
  "typescript.updateImportsOnFileMove.enabled": "always",

  // ESLint
  "eslint.enable": true,
  "eslint.autoFixOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
  },

  // Formatting
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  // Git
  "git.enableSmartCommit": true,
  "git.confirmSync": false,
  "git.autofetch": true,

  // Files
  "files.autoSave": "afterDelay",
  "files.autoSaveDelay": 1000,
  "files.exclude": {
    "**/node_modules": true,
    "**/.git": true,
    "**/dist": true,
    "**/build": true
  },
  "chat.detectParticipant.enabled": true,
  "github.copilot.chat.codeGeneration.instructions": true
}
